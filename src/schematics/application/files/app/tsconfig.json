{
  "extends": "<%= offsetFromRoot %>tsconfig.json",
  "compilerOptions": {
    "lib": ["es6"],
    "jsx": "react-native",
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": []
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
